{
    "index": {
      "analysis": {
        "analyzer": {
          "plain": {
            "filter": [],
            "tokenizer": "standard"
          },
          "my_custom_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": ["custom_stopper", "custom_stemmer", "custom_synonyms"]
          },
          "inflections": {
            "filter": ["custom_stemmer"],
            "tokenizer": "standard"
          }
        },
        "filter": {
          "custom_stopper": {
            "type": "stop",
            "stopwords_path": "analysis/stopwords.txt"
          },
          "custom_stemmer": {
            "type": "stemmer_override",
            "rules_path": "analysis/stem.txt"
          },
          "custom_synonyms": {
            "type": "synonym",
            "lenient": true,
            "synonyms_path": "analysis/synonym.txt"
          }
        }
      }
    }
  }